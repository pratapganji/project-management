// ---- bases (leave as you already have) ----
final String APIGEE_BASE = "https://uat.isg.icgservices.citigroup.net/isg/internal/crm/olympus";
final String WIP_BASE    = "https://olympus.api.crmtoolympusnew.uat.cloudgs1.nam.nsroot.net:443";
System.out.println("Target Server (WIP) URL: " + WIP_BASE);

// ======= choose ONE endpoint to call =======
// e.g. Client Meeting:
final String path    = "/publish/data/clientmeeting";
final byte[] payload = clientMeetingbyte;

// If you ever switch to another, just change the two lines above:
// final String path = "/publish/data/callreport";           final byte[] payload = callReportbyte;
// final String path = "/publish/data/clientactionitem";     final byte[] payload = actionItembyte;
// final String path = "/publish/details/client/productivitymetrics"; final byte[] payload = productivityMetricsbyte;
// ==========================================

// CAP prints for the ONE endpoint you’re calling
System.out.println("=====================================================");
System.out.println("CAP VERIFICATION (UAT) - APIGEE & TARGET (WIP) HTTPS");
System.out.println("APIGEE Base URL        : " + APIGEE_BASE);
System.out.println("Final Endpoint (Apigee): " + APIGEE_BASE + path);
System.out.println("=====================================================");

Mono<String> resultActionItem = WebClient.builder()
        // comment baseUrl out if you pass absolute URI below
        // .baseUrl(APIGEE_BASE)
        .defaultHeader(HttpHeaders.CONTENT_TYPE, MediaType.APPLICATION_OCTET_STREAM_VALUE)
        .filter((request, next) -> {
            System.out.println("→ REQUEST " + request.method() + " " + request.url());
            return next.exchange(request).doOnNext(resp ->
                System.out.println("← RESPONSE " + resp.statusCode()));
        })
        .build()
        .post()
        .uri(APIGEE_BASE + path)     // <- use the selected path
        .bodyValue(payload)          // <- use the selected payload
        .exchangeToMono(response -> {   // keep your handler unchanged
            if (response.statusCode().equals(HttpStatus.OK)) {
                return response.bodyToMono(String.class);
            } else if (response.statusCode().is4xxClientError()) {
                System.out.println("Response Status Code: " + response.statusCode());
                System.out.println("Response Body: " + response.bodyToMono(String.class));
                return Mono.just("Error response 400" + response.toString());
            } else {
                return response.createException().flatMap(Mono::error);
            }
        });

System.out.printf("Response Action Item: %s%n", resultActionItem.block());
System.out.println("End of WebClient");