for (Map.Entry<String, byte[]> e : endpoints.entrySet()) {
    String path     = e.getKey();
    byte[] payload  = e.getValue();
    if (payload == null) {
        System.out.println("Skipping " + path + " (payload is null)");
        continue;
    }

    System.out.println("=====================================================");
    System.out.println("CAP VERIFICATION (UAT) - APIGEE & TARGET (WIP) HTTPS");
    System.out.println("APIGEE Base URL        : " + APIGEE_BASE);
    System.out.println("Target Server (WIP) URL: " + WIP_BASE);
    System.out.println("Final Endpoint (Apigee): " + APIGEE_BASE + path);
    System.out.println("=====================================================");

    Mono<String> resultActionItem = WebClient.builder()
        // (optional) comment this out since you're passing absolute URI below
        // .baseUrl(WIP_BASE)
        .defaultHeader(HttpHeaders.CONTENT_TYPE, MediaType.APPLICATION_OCTET_STREAM_VALUE)
        .filter((request, next) -> {
            System.out.println("→ REQUEST " + request.method() + " " + request.url());
            return next.exchange(request).doOnNext(resp ->
                System.out.println("← RESPONSE " + resp.statusCode()));
        })
        .build()
        .post()
        .uri(APIGEE_BASE + path)     // <-- was hard-coded; now uses map entry
        .bodyValue(payload)          // <-- was clientMeetingbyte; now uses map entry
        .exchangeToMono(response -> {   // <-- keep your existing code BELOW unchanged
            if (response.statusCode().equals(HttpStatus.OK)) {
                return response.bodyToMono(String.class);
            } else if (response.statusCode().is4xxClientError()) {
                System.out.println("Response Status Code: " + response.statusCode());
                System.out.println("Response Body: " + response.bodyToMono(String.class));
                return Mono.just("Error response 400" + response.toString());
            } else {
                return response.createException().flatMap(Mono::error);
            }
        });

    System.out.printf("Response Action Item: %s%n", resultActionItem.block());
    System.out.println("End of WebClient\n");
}