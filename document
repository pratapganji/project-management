serviceaccount.yaml
apiVersion: v1
kind: ServiceAccount
metadata:
  name: pod-restarter
  namespace: icg-isg-olympus-data-176352

role.yaml
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: pod-deleter
  namespace: icg-isg-olympus-data-176352
rules:
- apiGroups: [""]
  resources: ["pods"]
  verbs: ["get", "list", "delete"]

rolebinding.yaml
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: pod-deleter-binding
  namespace: icg-isg-olympus-data-176352
subjects:
- kind: ServiceAccount
  name: pod-restarter
  namespace: icg-isg-olympus-data-176352
roleRef:
  kind: Role
  name: pod-deleter
  apiGroup: rbac.authorization.k8s.io


serviceAccountName: pod-restarter
