package com.citi.olympus.nura.api.scheduler;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.scheduling.annotation.Scheduled;
import org.springframework.stereotype.Component;

import java.util.List;
import java.util.Map;

@Component
public class BulkRetryScheduler {

    @Autowired
    private JdbcTemplate jdbcTemplate;

    @Scheduled(fixedRate = 30000)  // runs every 30 seconds
    public void fetchAuditData() {
        String sql = "SELECT * FROM OM_NURAFLOW_AUDIT_DATA WHERE ROWNUM <= 10"; // limit for testing

        List<Map<String, Object>> results = jdbcTemplate.queryForList(sql);

        for (Map<String, Object> row : results) {
            System.out.println("Row Data: " + row);
        }
    }
}



@EnableScheduling
